@{
    ViewData["Title"] = "Contacts";
}
@model List<TelephoneDirectoryApp.Model.WebModel.ContactWM>

@section CSS{

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/select/1.3.3/css/select.bootstrap4.min.css" rel="stylesheet" />
}

<div class="panel-header panel-header-sm">
</div>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6"><h4 class="card-title"> Rehberdeki Kişiler</h4></div>
                        <div class="col-md-6"><button class="btn btn-success" type="button" style="float:right">Rehbere Yeni Kişi Ekle</button></div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">

                        <table id="example" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Adı</th>
                                    <th>Soyadı</th>
                                    <th>Firması</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.Surname
                                        </td>
                                        <td>
                                            @item.Firm
                                        </td>
                                        <td>
                                            <button class="btn btn-info" type="button">Detay Görüntüle</button>
                                            <button class="btn btn-primary" type="button">Güncelle</button>
                                            <button class="btn btn-danger" type="button">Sil</button>
                                            <button class="btn btn-warning" type="button">Detay Ekle</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Adı</th>
                                    <th>Soyadı</th>
                                    <th>Firması</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/select/1.3.3/js/dataTables.select.min.js"></script>

    <script>

        $(document).ready(function () {
            $('#example').DataTable({
                select: false
            });
        });

        //location.reload();

    </script>

}