@{
    ViewData["Title"] = "Contacts";
}
@model List<TelephoneDirectoryApp.Model.WebModel.ContactWM>

@section CSS{

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/select/1.3.3/css/select.bootstrap4.min.css" rel="stylesheet" />

    @*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4/dist/css/bootstrap.css">*@

}


<div class="panel-header panel-header-sm">
</div>
<div class="content">
    <div class="row">

        <div class="hidden modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="col-md-9">

                            <h4>Rehbere Yeni Kişi Kaydet</h4>

                        </div>
                        <div class="col-md-3">
                            <button type="button" class="close" data-dismiss="modal">×</button>

                        </div>

                    </div>
                    <div class="modal-body">
                        <!-- card -->
                        <article class="card">
                            <div class="card-body p-5">
                                <div class="tab-content">
                                    <div class="tab-pane active" id="nav-tab-card">
                                        <form role="form">
                                            <!--<div class="form-group">
                                                <label><span class="hidden-xs">Type</span> </label>
                                                <div class="form-inline">
                                                    <select class="form-control" style="width:100%">
                                                        <option>Seçiniz</option>
                                                    </select>
                                                </div>
                                            </div>-->
                                            <!-- form-group.// -->
                                            <div class="form-group">
                                                <label for="name">Ad</label>
                                                <input type="text" class="form-control" name="name" id="name" placeholder="" required>
                                            </div> <!-- form-group.// -->
                                            <div class="form-group">
                                                <label for="surname">Soyad</label>
                                                <input type="text" class="form-control" name="surname" id="surname" placeholder="" required>
                                            </div> <!-- form-group.// -->
                                            <div class="form-group">
                                                <label for="Firm">Firma</label>
                                                <input type="text" class="form-control" name="firm" id="firm" placeholder="">
                                            </div> <!-- form-group.// -->
                                            <button class="subscribe btn btn-secondary btn-block" data-dismiss="modal" type="button"> Çıkış  </button>
                                            <button id="contactSave" class="subscribe btn btn-primary btn-block" type="button"> Kaydet  </button>
                                        </form>
                                    </div>
                                </div> <!-- tab-content .// -->
                            </div> <!-- card-body.// -->
                        </article> <!-- card.// -->
                    </div>
                </div>
            </div>
        </div><!-- Modal -->

        <div class="hidden modal fade" id="updateContactModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="col-md-9">

                            <h4>Kişi Bilgisini Düzenle</h4>

                        </div>
                        <div class="col-md-3">
                            <button type="button" class="close" data-dismiss="modal">×</button>

                        </div>

                    </div>
                    <div class="modal-body">
                        <!-- card -->
                        <article class="card">
                            <div class="card-body p-5">
                                <div class="tab-content">
                                    <div class="tab-pane active" id="nav-tab-card">
                                        <form role="form">
                                            <input type="hidden" id="updatedContactId" name="updatedContactId">
                                            <!-- form-group.// -->
                                            <div class="form-group">
                                                <label for="name">Ad</label>
                                                <input type="text" class="form-control" name="updateName" id="updateName" placeholder="" required>
                                            </div> <!-- form-group.// -->
                                            <div class="form-group">
                                                <label for="surname">Soyad</label>
                                                <input type="text" class="form-control" name="updateSurname" id="updateSurname" placeholder="" required>
                                            </div> <!-- form-group.// -->
                                            <div class="form-group">
                                                <label for="Firm">Firma</label>
                                                <input type="text" class="form-control" name="updateFirm" id="updateFirm" placeholder="">
                                            </div> <!-- form-group.// -->
                                            <button class="subscribe btn btn-secondary btn-block" data-dismiss="modal" type="button"> Çıkış  </button>
                                            <button id="contactUpdate" class="subscribe btn btn-primary btn-block" type="button"> Kaydet  </button>
                                        </form>
                                    </div>
                                </div> <!-- tab-content .// -->
                            </div> <!-- card-body.// -->
                        </article> <!-- card.// -->
                    </div>
                </div>
            </div>
        </div><!-- Modal -->

        <div class="hidden modal fade" id="contactInformationAddModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="col-md-9">

                            <h4>Kişiye Bilgi Ekle</h4>

                        </div>
                        <div class="col-md-3">
                            <button type="button" class="close" data-dismiss="modal">×</button>

                        </div>

                    </div>
                    <div class="modal-body">
                        <!-- card -->
                        <article class="card">
                            <div class="card-body p-5">
                                <div class="tab-content">
                                    <div class="tab-pane active" id="nav-tab-card">
                                        <form role="form">
                                            <input type="hidden" id="infoContactId" name="infoContactId">
                                            <div class="form-group">
                                                <label><span class="hidden-xs">Tür</span> </label>
                                                <div class="form-inline">
                                                    <select name="infoType" id="infoType" class="form-control" style="width:100%; height:auto">
                                                        <option>Seçiniz</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <!-- form-group.// -->
                                            <div class="form-group">
                                                <label for="info">Bilgi</label>
                                                <input type="text" class="form-control" name="infoValue" id="infoValue" placeholder="" required>
                                            </div> <!-- form-group.// -->
                                            <button class="subscribe btn btn-secondary btn-block" data-dismiss="modal" type="button"> Çıkış  </button>
                                            <button id="infoSave" class="subscribe btn btn-primary btn-block" type="button"> Kaydet  </button>
                                        </form>
                                    </div>
                                </div> <!-- tab-content .// -->
                            </div> <!-- card-body.// -->
                        </article> <!-- card.// -->
                    </div>
                </div>
            </div>
        </div><!-- Modal -->

        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6"><h4 class="card-title"> Rehberdeki Kişiler</h4></div>
                        <div class="col-md-6"><button class="btn btn-success" type="button" style="float:right" data-toggle="modal" data-target="#myModal">Rehbere Yeni Kişi Ekle</button></div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">

                        <table id="example" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Adı</th>
                                    <th>Soyadı</th>
                                    <th>Firması</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.Surname
                                        </td>
                                        <td>
                                            @item.Firm
                                        </td>
                                        <td>
                                            <button class="btn btn-primary" onclick="getContactInfoForupdateModal('@item.Id')" type="button">Güncelle</button>
                                            <button class="btn btn-danger" onclick="deleteContact('@item.Id')" type="button">Sil</button>
                                            <button class="btn btn-info" type="button">Detay Görüntüle</button>
                                            <button class="btn btn-warning" type="button" onclick="getContactDetailForupdateModal('@item.Id')">Detay Ekle</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Adı</th>
                                    <th>Soyadı</th>
                                    <th>Firması</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/select/1.3.3/js/dataTables.select.min.js"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>

        $(document).ready(function () {

            $('#example').DataTable({
                select: false,
                order: [[0, "asc"]]
            });

            $('#myModal').on('hidden.bs.modal', function () {
                $(this).find('form').trigger('reset');
            })

            $('#contactInformationAddModal').on('hidden.bs.modal', function () {
                $(this).find('form').trigger('reset');
            })

            $("#contactSave").click(function () {

                var contactName = $("#name").val();
                var contactSurname = $("#surname").val();
                var contactFirm = $("#firm").val();

                if (!contactName.length || !contactName.length) {
                    Swal.fire({
                        icon: 'warning',
                        text: 'Ad ve Soyad alanları boş geçilemez! Lütfen doldurun.',
                    });

                    return;
                }

                var postModel = { Name: contactName, Surname: contactSurname, Firm: contactFirm }

                $.ajax({
                    type: "POST",
                    url: '/Contact/AddContact',
                    data: postModel,
                    success: function (status) {

                        if (status) {

                            toogleModel("myModal");

                            Swal.fire({
                                icon: 'success',
                                title: 'Kayıt Başarılı!',
                                text: 'Rehbere kayıt işlemi başarılı.',
                                showConfirmButton: false,
                            });

                            setTimeout(() => location.reload(), 800);
                        }
                        else {

                            toogleModel("myModal");

                            Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: 'Beklenmeyen bir hata ile karşılaşıldı. Lütfen Gerekli alanları doldurduğunuzdan emin olun.',
                                //footer: '<a href="">Why do I have this issue?</a>'
                            });
                        }

                    },
                    error: function () {

                        toogleModel("myModal");

                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Beklenmeyen bir hata ile karşılaşıldı. Lütfen Gerekli alanları doldurduğunuzdan emin olun.',
                            //footer: '<a href="">Why do I have this issue?</a>'
                        });
                    }
                });
            });

            $("#contactUpdate").click(function () {

                var updatedContactId = $("#updatedContactId").val();
                var contactName = $("#updateName").val();
                var contactSurname = $("#updateSurname").val();
                var contactFirm = $("#updateFirm").val();

                if (!contactName.length || !contactName.length) {
                    Swal.fire({
                        icon: 'warning',
                        text: 'Ad ve Soyad alanları boş geçilemez! Lütfen doldurun.',
                    });

                    return;
                }

                var postModel = { Id: updatedContactId, Name: contactName, Surname: contactSurname, Firm: contactFirm }

                $.ajax({
                    type: "POST",
                    url: '/Contact/UpdateContact',
                    data: postModel,
                    success: function (status) {

                        if (status) {

                            toogleModel("updateContactModal");

                            Swal.fire({
                                icon: 'success',
                                title: 'Kayıt Başarılı!',
                                text: 'Kayıt güncelleme işlemi başarılı.',
                                showConfirmButton: false,
                            });

                            setTimeout(() => location.reload(), 800);
                        }
                        else {

                            toogleModel("updateContactModal");

                            Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: 'Beklenmeyen bir hata ile karşılaşıldı.',
                            });
                        }

                    },
                    error: function () {

                        toogleModel("updateContactModal");

                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Beklenmeyen bir hata ile karşılaşıldı.',
                        });
                    }
                });
            });

            $("#infoSave").click(function () {

                var infoContactId = $("#infoContactId").val();
                var infoTypeId = $("#infoType").val();
                var infoValue = $("#infoValue").val();

                if (!infoType.length || !infoValue.length) {
                    Swal.fire({
                        icon: 'warning',
                        text: 'Tür ve Bilgi alanları boş geçilemez! Lütfen doldurun.',
                    });

                    return;
                }

                var postModel = { ContactId: infoContactId, TypeId: infoTypeId, Value: infoValue }

                $.ajax({
                    type: "POST",
                    url: '/Contact/AddContactInformation',
                    data: postModel,
                    success: function (status) {

                        if (status) {

                            toogleModel("contactInformationAddModal");

                            Swal.fire({
                                icon: 'success',
                                title: 'Kayıt Başarılı!',
                                text: 'Bilgi kayıt işlemi başarılı.',
                                showConfirmButton: false,
                            });

                            setTimeout(() => location.reload(), 800);
                        }
                        else {

                            toogleModel("contactInformationAddModal");

                            Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: 'Beklenmeyen bir hata ile karşılaşıldı. Lütfen Gerekli alanları doldurduğunuzdan emin olun.',
                            });
                        }

                    },
                    error: function () {

                        toogleModel("contactInformationAddModal");

                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Beklenmeyen bir hata ile karşılaşıldı.',
                        });
                    }
                });
            });

        });

        function toogleModel(modalId) {
            $('#' + modalId + '').modal('toggle');
            $('.modal-backdrop').remove();
        }

        function deleteContact(contactId) {

            Swal.fire({
                title: 'Kaydı silmek istediğinden emin misin?',
                text: "Bu işlemi yaparsan geri alamazsın!",
                icon: 'warning',
                showCancelButton: true,
                //confirmButtonColor: '#3085d6',
                //cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'Hayır'
            }).then((result) => {
                if (result.isConfirmed) {

                    var postModel = { ContactId: contactId }

                    $.ajax({
                        type: "POST",
                        url: '/Contact/DeleteContact',
                        data: postModel,
                        success: function (status) {

                            if (status) {

                                Swal.fire({
                                    icon: 'success',
                                    title: 'İşlem Başarılı!',
                                    text: 'Kayıt rehberden kaldırıldı.',
                                    showConfirmButton: false,
                                });

                                setTimeout(() => location.reload(), 500);
                            }
                            else {


                                Swal.fire({
                                    icon: 'error',
                                    title: 'Oops...',
                                    text: 'Beklenmeyen bir hata ile karşılaşıldı.',
                                });
                            }

                        },
                        error: function () {
                            Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: 'Beklenmeyen bir hata ile karşılaşıldı.',
                            });
                        }
                    });


                }
            })
        }

        function getContactInfoForupdateModal(contactId) {

            var postModel = { ContactId: contactId }

            $.ajax({
                type: "GET",
                url: '/Contact/GetContactById',
                data: postModel,
                success: function (contactData) {

                    $("#updatedContactId").val(contactData.id);
                    $("#updateName").val(contactData.name);
                    $("#updateSurname").val(contactData.surname);
                    $("#updateFirm").val(contactData.firm);
                    $('#updateContactModal').modal('show');

                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Kayıt getirilirken beklenmeyen bir hata ile karşılaşıldı.',
                    });
                }
            });
        }

        function getContactDetailForupdateModal(contactId) {

            $("#infoContactId").val(contactId);

            $.ajax({
                type: "GET",
                url: '/Contact/GetAllContactType',
                success: function (contactTypeData) {

                    console.log(contactTypeData);

                    for (let i = 0; i < contactTypeData.length; ++i) {
                     
                        $('#infoType').append(`<option value="${contactTypeData[i].id}">${contactTypeData[i].name}</option>`);
                    }                 

                    $('#contactInformationAddModal').modal('show');

                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Kayıt getirilirken beklenmeyen bir hata ile karşılaşıldı.',
                    });
                }
            });
        }

    </script>

}